<UserControl x:Class="MPCProject2.ImageMovementUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MPCProject2"
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             mc:Ignorable="d"
             x:Name="ImageControlWindow">
    <Grid>
        <MediaElement Name="SoundToPlay"
                      LoadedBehavior="Manual" MediaEnded="Element_MediaEnded"/>
        <Canvas x:Name="CanvasImage">
            <Image x:Name="ImageToMove" Visibility="Hidden"></Image>
        </Canvas>
    </Grid>
</UserControl>
